<script type="text/javascript" charset="utf-8">
  PrivatePub.subscribe("<%= @roomaddress %>", function(data) {
    if(data.username == "Helpingcompchat")
    {
        $.ajax({
        url: '/compreply',
        type: 'POST',
        dataType: 'json',
        data: settings,
        cache: true,
        success: function (data) {}
      });
    }else
    {
      $('<li></li>').html(data.username + ": " + data.msg).appendTo('#chat');
    }
  });
$(window).unload(function(){
    $.ajax({
        url: '/userleft',
        type: 'POST',
        dataType: 'json',
        data: settings,
        cache: true,
        success: function (data) {}

    });
});

</script>
